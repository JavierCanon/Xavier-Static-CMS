@page "/"
@inherits BasePage

<div style="background-image: url(@BlogOptions.Cover); background-size: 100% 100%; margin-bottom: 0;">
    <Row Align="middle" Justify="center" Style="height: 100vh;">
        <Space Style="background-color: #f0f8ff96; border-radius: 20px; padding: 42px 49px;" Size="@($"{100}")">
            <SpaceItem>
                <img src="@BlogOptions.Icon" class="img-fluid mx-auto" style="border-radius: 20px; max-height: 256px; max-width: 256px;" />
            </SpaceItem>
            <SpaceItem>
                <Space Direction="vertical">
                    <SpaceItem>
                        <h1 class="display-4 text-center">@BlogOptions.Name</h1>
                    </SpaceItem>
                    <SpaceItem>
                        <Divider></Divider>
                    </SpaceItem>
                    <SpaceItem>
                        <Space>
                            <SpaceItem>
                                <AntDesign.Button Size="@ButtonSize.Large"
                                        OnClick="@(e=>NavigationManager.NavigateTo("articles"))">
                                    <MdiIcon Type="feather" />
                                    <a href="articles">Articles</a>
                                </AntDesign.Button>
                            </SpaceItem>
                            <SpaceItem>
                                <AntDesign.Button Size="@ButtonSize.Large"
                                        OnClick="@(e=>NavigationManager.NavigateTo("slides"))">
                                    <MdiIcon Type="presentation" />
                                    <a href="slides">Slides</a>
                                </AntDesign.Button>
                            </SpaceItem>
                            <SpaceItem>
                                <AntDesign.Button Size="@ButtonSize.Large"
                                        OnClick="@(e=>NavigationManager.NavigateTo("notes"))">
                                    <MdiIcon Type="file-document" />
                                    <a href="notes">Notes</a>
                                </AntDesign.Button>
                            </SpaceItem>
                        </Space>
                    </SpaceItem>
                </Space>
            </SpaceItem>
        </Space>
    </Row>
</div>

